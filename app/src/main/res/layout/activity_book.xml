<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f64b9"
    tools:context="com.tut.mayank.myhel.BookActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"><![CDATA[
        >

        ]]>
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/radioButton3"
            android:layout_alignEnd="@+id/radioGroup"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:padding="16dp"
            android:text="Submit document" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="30dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:padding="16dp"
            android:text="Buy Grocery" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:padding="16dp"
            android:text="Other Work" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:text="Choose the type of work "
        android:textSize="30dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter other work if any"
        android:layout_marginLeft="30dp"
        android:inputType="textImeMultiLine"
        android:layout_marginTop="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
